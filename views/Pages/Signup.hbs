<div class="signup-main container my-5">
            <h1 class="text-center">Signup</h1>

<form method="post" action="/user/signup" class="bg-light rounded my-5 p-5 ">
            <input class="form-control mb-3 " type="text" name="username" placeholder="Enter your username">
            <input class="form-control mb-3" type="email" name="email" placeholder="Enter your email">
            <input class="form-control mb-3" type="tel" name="contact" placeholder="Enter your contact">
            <input class="form-control mb-3" type="password" name="password" placeholder="Enter your password">
        


           {{#if message}}

          <div class="alert alert-danger alert-dismissible">
             <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            <strong>{{message}} </strong>
     
          </div>
    
        {{/if}}

                <button type="submit" class="btn btn-info">Sig In</button>
</form>
</div>