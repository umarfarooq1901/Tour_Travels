<div class="login-main container my-5">
            <h1 class="text-center">Admin Login</h1>




<form action="/admin/login" method="POST" class="form bg-light rounded my-5">
            
            <input class="form-control mb-3" type="email" placeholder="Enter your email">       
            <input class="form-control mb-3" type="password" placeholder="Enter your password">
            {{#if message}}

            <div>  <strong>{{message}} </strong> </div>

            {{/if}}
           <button type="submit" class="px-4 py-2 border-0 rounded" style="background-color: #86b817; color:white; ">Login</button>
</form>


</div>